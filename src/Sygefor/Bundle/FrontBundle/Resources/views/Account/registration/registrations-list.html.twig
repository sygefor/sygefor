<div class="registrations-list">
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
            <tr>
                <th>Inscription</th>
                <th>Centre</th>
                <th>Formation</th>
                <th>Session</th>
                {% if user is defined and user.isPaying == true %}
                    <th>Tarif</th>
                {% endif %}
                <th>Statut</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for registration in list | orderBy('date') %}
                <tr>
                    <td>{{ registration.createdAt | date('d/m/Y') }}</td>
                    <td>{{ registration.session.training.organization.name }}</td>
                    <td><a href="{{ path('front.public.training', {id: registration.session.training.id, sessionId: registration.session.id}) }}">{{ registration.session.training.name }}</a></td>
                    <td>{{ registration.session.name }} {{ registration.session.dateBegin | date('m/d/Y') }}</td>
                    {% if user is defined and user.isPaying == true %}
                        <td title="Tarif de la formation"> {{registration.session.price ? registration.session.price : '0'}} €</td>
                    {% endif %}
                    <td>
                        {% include '@SygeforFront/Account/registration/inscription-status-label.html.twig' %}
                    </td>
                    <td>
                        {% if registration.upcoming and registration.inscriptionStatus.status < 3 %}
                            <a href="{{ path('front.account.registration.desist', {id: registration.id}) }}" class="btn btn-danger btn-xs pull-right">
                                {{ registration.inscriptionStatus.id == 1 ? 'Annuler cette demande' : 'Déclarer un désistement' }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
