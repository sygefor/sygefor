<div class="container">
    <section>
        <div class="outer-wrap">
            <div class="inner-wrap">
                <!-- RESULTS -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-xs-12 col-md-9">
                                {% if search.items is not defined or search.items | length == 0 %}
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <h3 class="no-session">
                                                Aucune session n'est disponible pour le moment.
                                            </h3>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="session session--list">
                                        <div>
                                            {% set mounth = "" %}
                                            {% for session in search.items %}
                                                {% if session.dateBegin | date('m') != mounth %}
                                                    {% set mounth = session.dateBegin | date('m') %}
                                                    <h3>{{ session.dateBegin | date('F') | trans }} {{ session.dateBegin | date('Y') }}</h3>
                                                {% endif %}
                                                {% include '@SygeforFront/Public/program/session-list-item.html.twig' %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                                {% include('@SygeforFront/pagination.html.twig') %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>